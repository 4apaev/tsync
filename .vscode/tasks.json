{
  "version": "2.0.0",
  "problemMatcher": [],
  "presentation": {
    "panel": "shared",
    "focus": true,
    "clear": true,
    "reveal": "always",
  },
  "tasks": [
    {
      "type": "shell",
      "label": "lint",
      "command": "eslint",
      "args": [ "--fix", "${workspaceFolder}/${relativeFile}" ]
    }, {
      "type": "shell",
      "label": "test:file",
      "command": "mocha",
      "args": [ "${workspaceFolder}/${relativeFile}" ],
      "group": { "kind": "test", "isDefault": true },

    }, {
      "type": "shell",
      "label": "run",
      "command": "node",
      "args": [ "${workspaceFolder}/${relativeFile}" ],
    }
  ]
}