{
  "lines": 90,
  "branches": 90,
  "functions": 90,
  "statements": 90,

  "reporter": [
    "text",
    "lcov"
  ],

  "include": [
    "dist/**/*.js"
  ],

  "exclude": [
    "src/**",
    "test/**",
    "coverage/**",
    "scripts/**"
  ],

  "clean": true,
  "per-file": true,
  "check-coverage": true,
  "temp-directory": ".c8_temp"
}