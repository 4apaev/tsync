{
  "lines": 90,
  "branches": 90,
  "functions": 90,
  "statements": 90,

  "reporter": [
    "text",
    "lcov"
  ],

  "include": [
    "src/**/*.js"
  ],

  "exclude": [
    "test/**",
    "scripts/**"
  ],

  "clean": true,
  "per-file": true,
  "check-coverage": true,
  "temp-directory": ".c8tmp",
  "report-dir":    ".c8reports"
}